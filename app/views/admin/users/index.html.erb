<h1 class="mb-3">Users</h1>

<div class="mb-3">
  <%= link_to "New User", new_admin_user_path, class: "btn btn-primary" %>
</div>

<%= bootstrap_form_with model: @form, url: admin_users_path, scope: :form, method: :get, class: "bg-light border rounded p-3" do |f| %>
  <dl class="horizontal align-items-center mb-0">
    <dt>Query</dt>

    <dd>
      <%= f.search_field :query, value: params[:query], placeholder: "Search by username, email, name, or organization", wrapper: false %>
    </dd>

    <dt>Status</dt>

    <dd>
      <%= f.radio_button :inet_user_status, "", label: "All", inline: true %>

      <% User.inet_user_status.options.each do |label, value| %>
        <%= f.radio_button :inet_user_status, value, label:, inline: true %>
      <% end %>
    </dd>

    <dt>Account type</dt>

    <dd>
      <%= f.radio_button :account_type_number, "", label: "All", inline: true %>

      <% User.account_type_number.options.each do |label, value| %>
        <%= f.radio_button :account_type_number, value, label:, inline: true %>
      <% end %>
    </dd>

    <dd><%= f.primary "Search" %></dd>
  </dl>
<% end %>

<p>Displaying the first 100 users from your search.</p>

<table class="table border">
  <thead class="table-light">
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Name</th>
      <th>Organization</th>
      <th>Status</th>
      <th>Account type</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, edit_admin_user_profile_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.full_name %></td>
        <td><%= user.organization %></td>
        <td><%= user.inet_user_status_text %></td>
        <td><%= user.account_type_number_text %></td>
      </tr>
    <% end %>
  </tbody>
</table>
