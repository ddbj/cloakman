<h1 class="mb-3">Users</h1>

<div class="mb-3">
  <%= link_to "New User", new_admin_user_path, class: "btn btn-primary" %>
</div>

<%= bootstrap_form_with method: :get do |f| %>
  <%= f.search_field :query, hide_label: true, placeholder: "Search by username, email, name, or organization", append: f.primary("Search") %>
<% end %>

<p>Displaying the first 100 users from your search.</p>

<table class="table border">
  <thead class="table-light">
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Name</th>
      <th>Organization</th>
      <th>Account type</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, edit_admin_user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= [ user.first_name, user.middle_name, user.last_name ].compact_blank.join(" ") %></td>
        <td><%= user.organization %></td>
        <td><%= user.account_type_number_text %></td>
      </tr>
    <% end %>
  </tbody>
</table>
