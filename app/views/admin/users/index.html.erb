<h1 class="mb-3">Users</h1>

<div class="mb-3">
  <%= link_to "New User", new_admin_user_path, class: "btn btn-primary" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Name</th>
      <th>Organization</th>
      <th>Account type</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, edit_admin_user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= [ user.first_name, user.middle_name, user.last_name ].compact_blank.join(" ") %></td>
        <td><%= user.organization %></td>

        <td>
          <% case user.account_type_number %>
          <% when 1 %>
            Normal
          <% when 3 %>
            Admin
          <% else %>
            <%= user.account_type_number %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
