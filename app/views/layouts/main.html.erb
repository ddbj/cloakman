<% content_for :content do %>
  <div class="row">
    <div class="col-3">
      <div class="list-group">
        <%= link_to "Account", edit_account_path, **{
          class: ["list-group-item", "list-group-item-action", active: current_page?(edit_account_path)]
        } %>

        <%= link_to "Password", edit_password_path, **{
          class: ["list-group-item", "list-group-item-action", active: current_page?(edit_password_path)]
        } %>

        <%= link_to "SSH keys", ssh_keys_path, **{
          class: ["list-group-item", "list-group-item-action", active: current_page?(ssh_keys_path)]
        } %>
      </div>
    </div>

    <div class="col-9">
      <%= yield %>
    </div>
  </div>
<% end %>

<%= render template: "layouts/application" %>
